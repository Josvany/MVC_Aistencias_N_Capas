@model Entity.User_Entity

@{

}
<div class="info2">
    <div class="container">
        @using (Html.BeginForm("Login", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4 style="text-align:center"> Iniciar sesion</h4> <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Use_Login, new { @class = "col-md-5 control-label" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(m => m.Use_Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Use_Login, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Use_Pass, new { @class = "col-md-5 control-label" })
                    <div class="col-md-3">
                        @Html.PasswordFor(m => m.Use_Pass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Use_Pass, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-6 col-md-2">
                        <input type="submit" value="Entrar" class="btn btn-default success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
